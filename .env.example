# =========================
# Django
# =========================
# Secret key (replace in real .env)
DJANGO_SECRET_KEY=change_me
# Settings module to load (prod/dev/base.)
DJANGO_SETTINGS_MODULE=theater_service.settings.base

# =========================
# Email (SMTP)
# =========================
# Sender login (usually the email address)
EMAIL_HOST_USER=you@example.com
# App password / SMTP password
EMAIL_HOST_PASSWORD=your_app_password
# Default "From" header for emails
DEFAULT_FROM_EMAIL=Theater <you@example.com>

# If your settings expect explicit SMTP config, uncomment and fill:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_TIMEOUT=30

# =========================
# Postgres
# =========================
POSTGRES_DB=your_db_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_HOST=your_db_host
POSTGRES_DB_PORT=5432

# =========================
# Celery / Redis
# =========================
# Local Redis (Docker/host): redis://127.0.0.1:6379/1
# Cloud Redis example: redis://:PASSWORD@HOST:PORT/1
CELERY_BROKER_URL=redis://127.0.0.1:6379/1
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/1
